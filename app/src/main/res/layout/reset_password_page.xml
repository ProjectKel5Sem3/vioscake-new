<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightbrown"
    tools:context=".EntryPackage.ResetPassword">

    <LinearLayout
        android:id="@+id/lineartop1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/returntologin2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttonresetpassword1"
                android:src="@drawable/arrow_return"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset Password"
                android:textSize="20sp"
                android:paddingLeft="30dp"
                android:paddingTop="100dp"
                android:fontFamily="@font/poppinssemibold"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/imglogo1"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/logo1" />

    </LinearLayout>



    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewlupapassword2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lineartop1"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/verotpdanpas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Verifikasi OTP dan Password"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="@color/lightbrown"
                android:textStyle="bold"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintreset1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/konfirmasikode1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_edittext"
                    android:layout_marginTop="5dp"
                    android:inputType="textPassword"
                    android:hint="Kode OTP"
                    android:fontFamily="@font/poppinsmedium"
                    android:paddingLeft="12dp"
                    android:paddingRight="8dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/lockicon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/lightbrown"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintreset2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/konfirmasikode2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_edittext"
                    android:layout_marginTop="5dp"
                    android:inputType="textPassword"
                    android:hint="New Password"
                    android:fontFamily="@font/poppinsmedium"
                    android:paddingLeft="12dp"
                    android:paddingRight="8dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/lockicon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <ImageView
                    android:id="@+id/toggleeyereset1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/eye_closed"
                    android:paddingTop="15dp"
                    android:paddingLeft="20dp"
                    android:paddingBottom="12dp"
                    android:layout_marginEnd="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/konfirmasikode2"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/lightbrown"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintreset3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/konfirmasikode3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_edittext"
                    android:layout_marginTop="5dp"
                    android:inputType="textPassword"
                    android:hint="Confirm Password"
                    android:fontFamily="@font/poppinsmedium"
                    android:paddingLeft="12dp"
                    android:paddingRight="8dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/lockicon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <ImageView
                    android:id="@+id/toggleeyereset2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/eye_closed"
                    android:paddingTop="15dp"
                    android:paddingLeft="20dp"
                    android:paddingBottom="12dp"
                    android:layout_marginEnd="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/konfirmasikode3"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/buttonresetpassword1"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardviewlupapassword2"
        android:layout_marginStart="200dp"
        app:cardCornerRadius="5dp"
        android:layout_gravity="right"
        android:backgroundTint="@color/semidarkbrown">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:textSize="16dp"
            android:padding="10dp"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/poppinssemibold"/>

    </androidx.cardview.widget.CardView>

</RelativeLayout>